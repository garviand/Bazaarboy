// User.Register

extends ../layout

block title
    | Bazaarboy | Register

append script
    script(type="text/javascript", src="{{ STATIC_URL }}js/user/register.js")
    script(type="text/javascript").
        Bazaarboy.user.register.init();

block vars
    - var whiteBg = true

block body
    include ../components/facebook
    div#register
        h2 Register
        br
        a#fb_login(href="javascript:;") Login with Facebook
        br
        form(name="register")
            label Full name
            input(type="text", name="full_name")
            br
            label Email
            input(type="text", name="email")
            br
            label Password
            input(type="password", name="password")
            br
            label Confirm
            input(type="password", name="confirm")
            br
            label City
            input(type="text", name="city")
            br
            input(type="submit", name="submit", value="Register")