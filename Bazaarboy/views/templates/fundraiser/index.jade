// Fundraiser

extends ../layout

block title
    | {{ fundraiser.title }}

append head
    {% if fundraiser.is_private %}
    meta(name="robots", content="noindex,nofollow")
    {% endif %}
    link(rel="stylesheet", href="{{ STATIC_URL }}redactor/redactor.css")

block vars
    - var collapsed = true

prepend body
    {% if not user.fb_id %}
    include ../components/facebook
    {% endif %}

block content
    {% load humanize %}
    div#fundraiser.event_base.small_cover
        div.cover
            div.image
            div.caption
        div.title
            div.controls
            div.text
                {{ fundraiser.name }}
            div.clear
        div.frame
            div.left
                div.placeholder
                div.description
                    div.editor
                        div.inner
                            {{ fundraiser.description|safe }}
                    div.controls
                        a.save(href="javascript:;") Save
            div.right
                div.goal
                    div.caption Goal ${{ fundraiser.goal|floatformat:2|intcomma }}
                    div.progress
                div.action
                    div.button
                        {% if editable %}
                        b Edit Rewards
                        {% else %}
                        b Donate
                        {% endif %}
                    div.price
                    div.clear
                div.time.info
                div.organizers.info
                    div.caption
                        div.text Organizers
                        div.clear
                div.friends.info
                    div.caption
                        div.text Friends Donated
                        {% if user.fb_id %}
                        div.share
                            b Share
                        {% endif %}
                        div.clear
                    div.content
                        {% if user.fb_id %}
                        {% else %}
                        {% endif %}
                div.summary.info
                    div.caption
                        div.text Summary
                        div.clear
                div.tags.info
                    div.caption
                        div.text Tags
                        div.clear
            div.clear
        div.sponsors
            div.caption
                div.text Sponsors
                div.clear
        div.others
            div.similar
            div.nearby
            div.recommendation
            div.clear
    {% if editable %}
    div#rewards.event_overlay_canvas
        div.title Edit Tickets
    {% else %}
    div#donate.event_overlay_canvas
        div.title
            {{ fundraiser.title }}
        {% if not user %}
        div.user
            div.caption Do you have a Bazaarboy account?
            div.normal
                div.login
                    div.caption Log In
                    div.form
                        form.login
                            input(type="text", name="email", placeholder="Email")
                            input(type="password", name="password", placeholder="Password")
                            input(type="submit", value="Log In")
                div.divider
                div.register
                    div.caption Register
                    div.form
                        form.register
                            input(type="text", name="full_name", placeholder="Your Name")
                            input(type="text", name="email", placeholder="Email")
                            input(type="password", name="password", placeholder="Password")
                            input(type="submit", value="Register")
                            input(type="hidden", name="city", value="{{ fundraiser.city.id }}")
                div.clear
        div.divider or
        div.email
            input(type="text", name="email", placeholder="Email")
        {% endif %}
        div.rewards
        div.action
        div.checkout
    {% endif %}

append script
    script(type="text/javascript", src="{{ STATIC_URL }}redactor/redactor.min.js")
    script(type="text/javascript").
        var editable = {% if editable %}true{% else %}false{% endif %};
    script(type="text/javascript", src="{{ STATIC_URL }}js/fundraiser/index.js")