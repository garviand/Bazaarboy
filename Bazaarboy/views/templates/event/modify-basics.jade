extends ../layout

append head
    link(rel="stylesheet", href="{{ STATIC_URL }}jQueryUI/jquery-ui.css")
    link(rel="stylesheet", href="{{ STATIC_URL }}pikaday/pikaday.css")

block sidebar
    +sidebarItem('ss-file')(href="{% url event:modify id 'basics' %}", class="selected")
        | Basic information
    +sidebarItem('ss-picture')(href="{% url event:modify id 'design' %}")
        | Page design
    +sidebarItem('ss-tag')(href="{% url event:modify id 'tickets' %}")
        | Ticket options
    +sidebarItem('ss-star')(href="{% url event:modify id 'bonus' %}")
        | Bonus
    +sidebarItem('ss-mail')(href="{% url event:modify id 'emails' %}")
        | Emails

block content
    div#wrapper-event-modify.medium-9.columns.small-centered
        form.event-modify
            label Event Name
            input(type="text", name="name", value="{{ event.name }}", placeholder="Event name")
            br
            label Event Summary
            input(type="text", name="summary", value="{{ event.summary }}", placeholder="Short summary")
            br
            label Start Time
            input(type="text", name="start_date", value="{{ event.start_time|date:'m/d/Y' }}", placeholder="MM/DD/YYYY")
            input(type="text", name="start_time", value="{{ event.start_time|date:'g:i A' }}", placeholder="ex. 6:00 PM")
            br
            label End Time
            input(type="text", name="end_date", value="{{ event.end_time|date:'m/d/Y' }}", placeholder="MM/DD/YYYY")
            input(type="text", name="end_time", value="{{ event.end_time|date:'g:i A' }}", placeholder="ex. 7:00 PM")
            br
            label Location
            input(type="text", name="location", value="{{ event.location }}", placeholder="Event location")
            br
            input(type="submit", value="Next")
            input(type="hidden", name="latitude", value="{{ event.latitude }}")
            input(type="hidden", name="longitude", value="{{ event.longitude }}")

append script
    script(src="{{ STATIC_URL }}JSON-js/json2.js")
    script(src="{{ STATIC_URL }}jQueryUI/jquery-ui.min.js")
    script(src="{{ STATIC_URL }}jQueryUI/jquery-ui.autocomplete.html.js")
    script(src="{{ STATIC_URL }}timeautocomplete/jquery.timeAutocomplete.js")
    script(src="{{ STATIC_URL }}timeautocomplete/formatters/ampm.js")
    script(src="{{ STATIC_URL }}moment/moment.min.js")
    script(src="{{ STATIC_URL }}pikaday/pikaday.js")
    script(src="{{ STATIC_URL }}pikaday/pikaday.jquery.js")
    script(type="text/javascript", src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAasW6vqPCn18g6UMaFWV90qGMSo6pErwo&sensor=false&libraries=places")
    script(type="text/javascript").
        var eventId = {{ event.id }};
        var token{% if params.token %} = '{{ params.token }}'{% endif %};   
    script(src="{{ STATIC_URL }}js/event/modify-basics.js")

