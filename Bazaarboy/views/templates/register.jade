extends layout

block title
    | Bazaarboy | Register

append head
    script(type="text/javascript").
        var next = '{% if params.next %}{{ params.next }}{% endif %}';

block body
    div#register
        h2 Register
        br
        form(name="register")
            label Email
            input(type="text", name="email")
            br
            label Password
            input(type="password", name="password")
            br
            label Confirm
            input(type="password", name="confirm")
            br
            label City
            input(type="text", name="city")
            br
            input(type="submit", name="submit", value="Login")