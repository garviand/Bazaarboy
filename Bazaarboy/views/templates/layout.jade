!!!5
html(lang="en")
    head
        block head
            title
                block title
                    | Bazaarboy
            link(rel="shortcut icon", href="{{ STATIC_URL }}images/logo.png")
            link(rel="stylesheet", href="{{ STATIC_URL }}css/styles.css")
            include components/analytics
    body
        block body
            include components/facebook
            div#wrapper-top.small-12.columns.show-for-small.only
                block top
                    include components/top
            div#wrapper-sidebar.large-2.medium-1.columns
                div#sidebar-frame.row
                    div#sidebar-logo.row
                        a(href="{% url index %}")
                            img(src="{{ STATIC_URL }}images/logo.png")
                    block sidebar
            div#wrapper-main.large-10.large-offset-2.medium-11.medium-offset-1.columns
                div#main-frame.small-12
                    div#wrapper-content.row
                        block content
                    div#wrapper-bottom.row
                        block bottom
                            include components/bottom
        div#scripts
            block script
                script(src="{{ STATIC_URL }}js/libraries.js")
                script.
                    var rootUrl = '{% url index %}';
                    var mediaUrl = '{{ MEDIA_URL }}';
                    var csrfToken = '{{ csrf_token }}';
                    var loggedIn = {% if user %}true{% else %}false{% endif %};
                script(src="{{ STATIC_URL }}js/bazaarboy.js")