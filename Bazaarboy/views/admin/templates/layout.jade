{% load layout %}
doctype 5
html(lang="en")
    head
        block head
            title
                block title
                    | Bazaarboy Admin
            script(type="text/javascript", src="//use.typekit.net/gjc0hvy.js")
            script(type="text/javascript").
                try{Typekit.load();}catch(e){}
            link(rel="stylesheet", href="{{ STATIC_URL }}admin/fui/bootstrap/css/bootstrap.css")
            link(rel="stylesheet", href="{{ STATIC_URL }}admin/fui/css/flat-ui.css")
            link(rel="stylesheet", href="{{ STATIC_URL }}admin/css/layout.css")
    body
        div.background
        div#wrapper_top
            div#top_inner
                block top
                    div.title Bazaarboy Admin
        div#wrapper_main
            block main
        div#wrapper_bottom
            block bottom
        block script
            script(type="text/javascript", src="{{ STATIC_URL }}js/libraries.js")
            script(type="text/javascript", src="{{ STATIC_URL }}js/libraries/jquery.min.js")
            script(type="text/javascript", src="{{ STATIC_URL }}admin/fui/js/bootstrap.min.js")
            script(type="text/javascript").
                var rootUrl = '{% url index %}';
                var csrfToken = '{{ csrf_token }}';
            script(type="text/javascript", src="{{ STATIC_URL }}admin/js/layout.js")