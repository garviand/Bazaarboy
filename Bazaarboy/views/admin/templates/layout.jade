{% load humanize %}
{% load layout %}
{% load tz %}
!!!5
html(lang="en")
    head
        block head
            title
                block title
                    | Bazaarboy Admin
            meta(charset="utf-8")
            meta(name="viewport", content="width=device-width")
            link(rel="shortcut icon", href="{{ STATIC_URL }}images/logo.png")
            link(rel="stylesheet", href="//cloud.typography.com/7993072/806564/css/fonts.css")
            link(rel="stylesheet", href="{{ STATIC_URL }}css/styles.css")
            link(rel="stylesheet", href="{{ STATIC_URL }}admin/css/layout.css")
            link(rel="stylesheet", href="{{ STATIC_URL }}gizmo/ss-gizmo.css")
            link(rel="stylesheet", href="{{ STATIC_URL }}sweetalert/sweet-alert.css")
    body
        div#wrapper_top
            block top
        div#wrapper_main
            block content
        block script
            script(type="text/javascript", src="{{ STATIC_URL }}js/libraries.js")
            script(type="text/javascript", src="{{ STATIC_URL }}js/libraries/jquery.min.js")
            script(src="{{ STATIC_URL }}sweetalert/sweet-alert.min.js")
            script(src="{{ STATIC_URL }}fastclick/fastclick.js")
            script(type="text/javascript").
                var rootUrl = "{% url 'index' %}";
                var csrfToken = '{{ csrf_token }}';
            script(type="text/javascript", src="{{ STATIC_URL }}admin/js/layout.js")